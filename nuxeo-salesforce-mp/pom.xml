<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.nuxeo.salesforce</groupId>
		<artifactId>nuxeo-salesforce-parent</artifactId>
		<version>8.2-SNAPSHOT</version>
	</parent>
	<artifactId>nuxeo-salesforce-mp</artifactId>
	<packaging>zip</packaging>
	<name>Market Place Package for Nuxeo Salesforce</name>
	<description/>
	<dependencyManagement>
		<dependencies>
			<!-- Import Nuxeo BOM -->
			<dependency>
				<groupId>org.nuxeo.ecm.distribution</groupId>
				<artifactId>nuxeo-distribution</artifactId>
				<version>${nuxeo.distribution.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<!-- Base distribution(s) for the MP -->
		<dependency>
			<groupId>org.nuxeo.ecm.distribution</groupId>
			<artifactId>nuxeo-distribution-cap</artifactId>
			<!-- <artifactId>nuxeo-distribution-coreserver</artifactId> -->
			<!-- <artifactId>nuxeo-distribution-dm</artifactId> -->
			<!-- <artifactId>nuxeo-distribution-dam</artifactId> -->
			<type>pom</type>
		</dependency>
		<!-- Additional bundles to be deployed by the MP -->
		<dependency>
			<groupId>org.nuxeo.salesforce</groupId>
			<artifactId>nuxeo-salesforce-core</artifactId>
			<version>${nuxeo.project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.nuxeo.salesforce</groupId>
			<artifactId>nuxeo-salesforce-ui</artifactId>
			<version>${nuxeo.project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.nuxeo.salesforce</groupId>
			<artifactId>nuxeo-salesforce-web</artifactId>
			<version>${nuxeo.project.version}</version>
		</dependency>
	</dependencies>
	<build>
		<!-- Copy pluginManagement from org.nuxeo:nuxeo-ecm if not inheriting -->
		<!-- <pluginManagement> -->
		<!-- <plugins> -->
		<!-- <plugin> -->
		<!-- <groupId>org.nuxeo.build</groupId> -->
		<!-- <artifactId>ant-assembly-maven-plugin</artifactId> -->
		<!-- <version>${ant.assembly.version}</version> -->
		<!-- <extensions>true</extensions> -->
		<!-- </plugin> -->
		<!-- </plugins> -->
		<!-- </pluginManagement> -->
		<plugins>
			<plugin>
				<groupId>org.nuxeo.build</groupId>
				<artifactId>ant-assembly-maven-plugin</artifactId>
				<configuration>
					<buildFiles>
						<buildFile>${basedir}/src/main/assemble/assembly.xml</buildFile>
					</buildFiles>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
